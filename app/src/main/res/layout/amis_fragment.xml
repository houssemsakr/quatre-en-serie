<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewAddFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Add Friend"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/main_search_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/main_search_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/person_search"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/purple_700"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/search_button"
        app:layout_constraintTop_toTopOf="@id/textViewAddFriend"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Friends"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewAddFriend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/friends_icon" />

    <ImageButton
        android:id="@+id/friends_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/freind"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/purple_700"
        android:contentDescription="Friends List Icon"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/textViewFriends"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewInvitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invitation"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewFriends"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/invitation_icon" />

    <ImageButton
        android:id="@+id/invitation_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/invitation"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/purple_700"
        android:contentDescription="Invitation Icon"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/textViewInvitation"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
