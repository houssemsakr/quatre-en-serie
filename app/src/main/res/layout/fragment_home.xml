<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Ajoutez ici votre contenu pour la page d'accueil -->
    <TextView
        android:id="@+id/text_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue sur la page d'accueil !"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <!-- Bouton Login avec les mêmes propriétés que l'autre -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rami Tunisien "
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/btn_corner"
        android:layout_below="@+id/text_home"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
